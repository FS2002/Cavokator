<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wx_rwycond_titleLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:minWidth="300dp">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <!-- TITLE -->
        <TextView
            android:id="@+id/wx_rwycond_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RWY CONDITION"
            android:textSize="25dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />
    <!-- MAIN ERROR LINE -->
        <TextView
            android:text="Main error line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wx_rwycond_title"
            android:id="@+id/wx_rwycond_main_error"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20.0dp"
            android:enabled="true" />
    <!-- RUNWAY -->
        <TextView
            android:text="RwyCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wx_rwycond_title"
            android:id="@+id/wx_rwycond_rwycode"
            android:layout_marginTop="20.0dp"
            android:layout_marginLeft="20dp" />
        <TextView
            android:text="RwyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/wx_rwycond_rwycode"
            android:id="@+id/wx_rwycond_rwytext"
            android:layout_below="@id/wx_rwycond_title"
            android:layout_marginLeft="8.0dp"
            android:layout_marginTop="20.0dp" />
    <!-- DEPOSITS -->
        <TextView
            android:text="Deposits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wx_rwycond_rwytext"
            android:id="@+id/wx_rwycond_depositsCode"
            android:layout_marginTop="10.0dp"
            android:layout_marginLeft="20dp" />
        <TextView
            android:text="Deposits Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/wx_rwycond_depositsCode"
            android:id="@+id/wx_rwycond_depositsText"
            android:layout_below="@id/wx_rwycond_rwytext"
            android:layout_marginLeft="8.0dp"
            android:layout_marginRight="8.0dp"
            android:layout_marginTop="10.0dp" />
    <!-- EXTENT -->
        <TextView
            android:text="Extent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wx_rwycond_depositsText"
            android:id="@+id/wx_rwycond_extentCode"
            android:layout_marginTop="10.0dp"
            android:layout_marginLeft="20dp" />
        <TextView
            android:text="Extent Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/wx_rwycond_extentCode"
            android:id="@+id/wx_rwycond_extentText"
            android:layout_below="@id/wx_rwycond_depositsText"
            android:layout_marginLeft="8.0dp"
            android:layout_marginRight="8.0dp"
            android:layout_marginTop="10.0dp" />
    <!-- DEPTH -->
        <TextView
            android:text="Depth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wx_rwycond_extentText"
            android:id="@+id/wx_rwycond_depthCode"
            android:layout_marginTop="10.0dp"
            android:layout_marginLeft="20dp" />
        <TextView
            android:text="Depth Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/wx_rwycond_depthCode"
            android:id="@+id/wx_rwycond_depthText"
            android:layout_below="@id/wx_rwycond_extentText"
            android:layout_marginLeft="8.0dp"
            android:layout_marginRight="8.0dp"
            android:layout_marginTop="10.0dp" />
    <!-- FRICTION -->
        <TextView
            android:text="Friction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wx_rwycond_depthText"
            android:id="@+id/wx_rwycond_frictionCode"
            android:layout_marginTop="10.0dp"
            android:layout_marginLeft="20dp" />
        <TextView
            android:text="Friction Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/wx_rwycond_frictionCode"
            android:id="@+id/wx_rwycond_frictionText"
            android:layout_below="@id/wx_rwycond_depthText"
            android:layout_marginLeft="8.0dp"
            android:layout_marginRight="8.0dp"
            android:layout_marginTop="10.0dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/wx_rwycond_closeRelativeLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="Close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wx_rwycond_closeButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30.0dp" />
    </RelativeLayout>
</LinearLayout>